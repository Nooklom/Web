        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
         
        <script>
            $(function(){
                $('header').load("header.html");
                $('#currentpage').append($("title").text())
                $("#currentpage").click(false);
            })
            $(document).ready(function(){
                
                $('#currentpage').off('click');
                $(".comiccard").click(function(){
                    $("#comicslist").hide();
                    $("#comicview").show();
                    $("#comicview").load("bunny");
                    $("#currentcomic").append($(this).text());
                    $("#currentpage").removeClass("freeze");
                    $("<div class='separator'>>></div>").insertAfter("#currentpage");
                    $("#currentpage").click(function(){
                        $('#currentpage').next('div.separator').remove();
                        $("#comicslist").show();
                        $("#comicview").hide();
                        $("#comicview").empty();
                        $("#currentcomic").text("");
                        $("#currentpage").addClass("freeze");
                        $("#currentpage").click(false);
                    });
                });


            });
            $(document).ready(function(){
  
            });
        </script>
